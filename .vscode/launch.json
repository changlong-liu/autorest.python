{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        { 
            "name": "adp",
            "request": "launch",
            "cwd": "${workspaceFolder}/packages/cadl-python/adp",
            "runtimeArgs": ["compile", ".", "--emit", "@azure-tools/cadl-python"],
            "runtimeExecutable": "cadl",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "outFiles": [
              "${workspaceFolder}/packages/*/dist/**/*.js",
              "${workspaceFolder}/packages/*/dist-dev/**/*.js",
              "${workspaceFolder}/core/packages/*/dist/**/*.js",
              "${workspaceFolder}/core/packages/*/dist-dev/**/*.js"
            ]
          },
          { 
            "name": "client-test",
            "request": "launch",
            "cwd": "${workspaceFolder}/packages/cadl-python/client-test",
            "runtimeArgs": ["compile", ".", "--emit", "@azure-tools/cadl-python"],
            "runtimeExecutable": "cadl",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "outFiles": [
              "${workspaceFolder}/packages/*/dist/**/*.js",
              "${workspaceFolder}/packages/*/dist-dev/**/*.js",
              "${workspaceFolder}/core/packages/*/dist/**/*.js",
              "${workspaceFolder}/core/packages/*/dist-dev/**/*.js"
            ]
          },
        {
            "name": "Generate cadl",
            "request": "launch",
            "cwd": "${workspaceFolder}/cadl-ranch/packages/cadl-ranch-specs/http/resiliency/dev-driven",
            "args": ["compile", ".", "--emit", "${workspaceFolder}/packages/cadl-python/dist/src/index.js", "--debug"],
            "program": "${workspaceFolder}/packages/cadl-python/node_modules/@cadl-lang/compiler/dist/core/cli.js",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "smartStep": true,
            "sourceMaps": true,
          },
          {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost"
          }
    ]
}
